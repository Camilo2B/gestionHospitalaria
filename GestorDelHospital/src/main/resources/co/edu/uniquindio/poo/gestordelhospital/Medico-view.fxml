<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.gestordelhospital.ViewController.MedicoViewController">
   <children>
      <!-- Etiquetas y campos de texto para ingresar la información del médico -->
      <Label layoutX="50.0" layoutY="20.0" text="Nombre:" />
      <TextField fx:id="txtNombreMedico" layoutX="150.0" layoutY="20.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="60.0" text="Edad:" />
      <TextField fx:id="txtEdadMedico" layoutX="150.0" layoutY="60.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="100.0" text="Cédula:" />
      <TextField fx:id="txtCedulaMedico" layoutX="150.0" layoutY="100.0" prefWidth="200.0" />

      <Label layoutX="50.0" layoutY="140.0" text="Número máximo de pacientes:" />
      <TextField fx:id="txtNumMaxPacMedico" layoutX="250.0" layoutY="140.0" prefWidth="100.0" />

      <Label layoutX="50.0" layoutY="180.0" text="Cargo:" />
      <TextField fx:id="txtCargoMedico" layoutX="150.0" layoutY="180.0" prefWidth="200.0" />

      <!-- Botones para guardar y regresar -->
      <Button layoutX="150.0" layoutY="250.0" mnemonicParsing="false" onAction="#guardarMedico" text="Guardar" prefWidth="100.0" />
      <Button layoutX="300.0" layoutY="250.0" mnemonicParsing="false" onAction="#volverPantalla" text="Regresar" prefWidth="100.0" />
   </children>
</AnchorPane>